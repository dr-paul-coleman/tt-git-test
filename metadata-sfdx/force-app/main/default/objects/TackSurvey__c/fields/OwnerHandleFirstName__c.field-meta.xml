<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OwnerHandleFirstName__c</fullName>
    <description>Formula field to display the Tack Survey Owner's Handle Name from their user record; used in email templates.</description>
    <externalId>false</externalId>
    <formula>IF(ISBLANK(Owner:User.HandleFirstName__c),Owner:User.FirstName,Owner:User.HandleFirstName__c)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Owner Handle First Name</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
